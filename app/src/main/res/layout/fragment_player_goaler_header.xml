<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary2"
    android:padding="5dp"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/playerGoalerGoalsTxtV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="الأهداف"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="right"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_weight="15"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/playerGoalerNameTxtV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="اسم اللاعب"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:paddingRight="20dp"
        android:layout_weight="40"
        android:layout_toRightOf="@+id/playerGoalerTeamTxtV"
        android:layout_toLeftOf="@id/playerGoalerGoalsTxtV"/>

    <TextView
        android:id="@id/playerGoalerTeamTxtV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:text="الفريق"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:layout_alignParentLeft="true"/>


</LinearLayout>
