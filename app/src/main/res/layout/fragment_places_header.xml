<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/colorPrimary2"
    android:orientation="horizontal"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/posTxtV"
        android:layout_width="00dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:text="الترتيب"
        android:textStyle="bold"
        android:gravity="right"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_weight="15"/>

    <TextView
        android:id="@+id/teamTxtV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="الفريق"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_toLeftOf="@id/posTxtV"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:layout_centerVertical="true"
        android:layout_weight="20"/>
    <LinearLayout
        android:id="@+id/matchesTxtVs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/teamTxtV"
        android:orientation="vertical"
        android:layout_weight="40"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="المباريات"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playTxtView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:text="ل"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/winTxtV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ف"
                android:layout_weight="25"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toLeftOf="@id/playTxtView"/>
            <TextView
                android:id="@+id/drawTxtV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ت"
                android:layout_weight="25"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toLeftOf="@id/winTxtV"/>
            <TextView
                android:id="@+id/loseTxtV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="خ"
                android:layout_weight="25"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toLeftOf="@id/drawTxtV"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/matchesTxtVs"
        android:layout_centerVertical="true"
        android:text="النقاط"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:layout_weight="12"/>

</LinearLayout>