<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/childLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:visibility="visible"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/matchTimeTxtV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="17"
            android:gravity="right"
            android:padding="5dp"
            android:text="117:22"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/matchTeamRTxtV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="right"
            android:padding="5dp"
            android:text="نجران"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/matchResultLTxtV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="left"
                android:padding="5dp"
                android:text="10"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:padding="2dp"
                android:text="-"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/matchResultRTxtV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:padding="5dp"
                android:text="14"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/matchTeamLTxtV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="left"
            android:padding="5dp"
            android:text="نجران"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/headerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#8b8b8b"
        android:visibility="gone">

        <TextView
            android:id="@+id/matchDateTxtV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="الأربعاء 9 ديسمبر 2015"
            android:gravity="center"
            android:padding="5dp"/>



    </LinearLayout>
</FrameLayout>