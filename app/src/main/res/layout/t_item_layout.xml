<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:id="@+id/tLLayout">

    <TextView
        android:id="@+id/tDateTxtV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="13"
        android:gravity="center"
        android:text="2015/12/20"
        android:textColor="#000"
        android:textSize="12dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tPlayerNTxtV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="18"
        android:gravity="right"
        android:text="عبدالرحمن حسن الشمري"
        android:textColor="#000"
        android:textSize="12dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tTeamTxtV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="15"
        android:gravity="left"
        android:text="الى  قيصري إيرجياس سبور سبورس"
        android:textColor="#000"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/tTeamCntryTxtV"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginRight="3dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/tTypeTxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_weight="10"
        android:gravity="right"
        android:text="انتهاء تجربة"
        android:textColor="#000"
        android:textSize="12dip"
        android:textStyle="bold" />

</LinearLayout>